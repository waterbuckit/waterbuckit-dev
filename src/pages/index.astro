---
import Main from "../layouts/main.astro";
import { Pages, pageMap } from "../pages";
import me from "../images/me-min.jpg";
---

<Main active={pageMap[Pages.HOME].title}>
  <div class="flex md:flex-row mt-10 items-center gap-4 flex-col-reverse">
    <div class="md:w-1/2">
      <h1 class="text-4xl font-bold">Adam Royal</h1>
      <p class="text-3xl font-semibold dark:text-slate-300 text-slate-500">
        Web developer, web developer, web developer. <span class="text-slate-400 text-2xl">Guitarist?</span>
      </p>
    </div>
    <img src={me} alt="Adam (taken by the best in the year)" class="rounded-lg md:w-1/2 border border-slate-700" />
  </div>
</Main>
