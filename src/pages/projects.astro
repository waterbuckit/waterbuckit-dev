---
import Link from "../components/Link.astro";
import Main from "../layouts/main.astro";
import { Pages, pageMap } from "../pages";
import projects from "../projects";

---

<Main active={pageMap[Pages.PROJECTS].title}>
  <div class="flex flex-col mt-10 w-full gap-8">
    <h1 class="text-4xl font-bold">Projects</h1>
    <nav class="w-full">
      <ul class="grid grid-flow-row grid-cols-1 md:grid-cols-3 grid-rows-3 gap-4">
      {projects.map((project) => (
        <li class="rounded-lg border border-slate-400 bg-slate-700 relative p-4 focus-within:">
          <h2 class="font-bold text-xl">
            <Link href={project.href}>
            {project.title}
            </Link>
          </h2>
          <p class="mt-4">
            {project.description}
          </p>
        </li>
      ))}
      </ul>
    </nav>
  </div>
</Main>
